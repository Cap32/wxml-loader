{
    "parser": "babel-eslint",
    "plugins": [
        "import",
        "babel"
    ],
    "ecmaFeatures": {
        "jsx": true,
        "arrowFunctions": true,
        "binaryLiterals": true,
        "blockBindings": true,
        "classes": true,
        "defaultParams": true,
        "destructuring": true,
        "forOf": true,
        "generators": true,
        "modules": true,
        "objectLiteralComputedProperties": true,
        "objectLiteralDuplicateProperties": true,
        "objectLiteralShorthandMethods": true,
        "objectLiteralShorthandProperties": true,
        "octalLiterals": true,
        "regexUFlag": true,
        "regexYFlag": true,
        "restParams": true,
        "spread": true,
        "superInFunctions": true,
        "templateStrings": true,
        "unicodeCodePointEscapes": true
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "mocha": true
    },
    "rules": {
        "import/no-unresolved": 2,
        "import/default": 2,
        "import/named": 2,
        "import/namespace": 2,
        "import/export": 2,
        "import/no-absolute-path": 2,
        "import/no-named-as-default": 2,
        "import/no-named-as-default-member": 2,
        "import/no-extraneous-dependencies": 2,
        "import/no-mutable-exports": 2,
        "import/no-duplicates": 1,
        "import/newline-after-import": 1,

        "babel/new-cap": 1,
        "babel/object-curly-spacing": [1, "always"],
        "babel/object-shorthand": 1,
        "babel/arrow-parens": 1,
        "babel/no-await-in-loop": 0,

        "camelcase": 0,
        "consistent-return": 0,
        "no-catch-shadow": 0,
        "no-empty": 1,
        "no-extra-semi": 1,
        "no-process-exit": 0,
        "no-return-assign": 0,
        "no-shadow": 0,
        "no-undef": 2,
        "no-underscore-dangle": 0,
        "no-unused-vars": 1,
        "strict": [1, "global"],
        "semi": 1,

        "comma-dangle": 0,
        "no-cond-assign": 2,
        "no-constant-condition": 1,
        "no-control-regex": 1,
        "no-debugger": 2,
        "no-dupe-args": 2,
        "no-dupe-keys": 1,
        "no-ex-assign": 2,
        "no-extra-boolean-cast": 1,
        "no-extra-parens": 0,
        "no-func-assign": 2,
        "no-inner-declarations": 1,
        "no-invalid-regexp": 2,
        "no-irregular-whitespace": 2,
        "no-negated-in-lhs": 1,
        "no-obj-calls": 2,
        "no-regex-spaces": 2,
        "no-reserved-keys": 0,
        "no-sparse-arrays": 2,
        "no-unreachable": 2,
        "use-isnan": 2,
        "valid-jsdoc": 1,
        "valid-typeof": 2,
        "no-unexpected-multiline": 2,

        "block-scoped-var": 2,
        "complexity": 0,
        "curly": 1,
        "default-case": 0,
        "dot-notation": 0,
        "eqeqeq": [2, "smart"],
        "guard-for-in": 2,
        "no-alert": 0,
        "no-caller": 2,
        "no-div-regex": 1,
        "no-else-return": 0,
        "no-eq-null": 1,
        "no-eval": 1,
        "no-extend-native": 2,
        "no-extra-bind": 1,
        "no-fallthrough": 1,
        "no-floating-decimal": 1,
        "no-implied-eval": 1,
        "no-iterator": 1,
        "no-labels": 2,
        "no-lone-blocks": 2,
        "no-loop-func": 2,
        "no-multi-spaces": [0, {
            "exceptions": {}
        }],
        "no-multi-str": 2,
        "no-native-reassign": 2,
        "no-new": 0,
        "no-new-func": 2,
        "no-new-wrappers": 2,
        "no-octal": 2,
        "no-octal-escape": 2,
        "no-param-reassign": 0,
        "no-process-env": 0,
        "no-proto": 2,
        "no-redeclare": 2,
        "no-script-url": 2,
        "no-self-compare": 2,
        "no-sequences": 2,
        "no-unused-expressions": [1, {
            "allowShortCircuit": true
        }],
        "no-void": 2,
        "no-warning-comments": 0,
        "no-with": 2,
        "radix": 0,
        "vars-on-top": 2,
        "wrap-iife": 2,
        "yoda": 2,


        "no-delete-var": 1,
        "no-label-var": 1,
        "no-shadow-restricted-names": 2,
        "no-undef-init": 0,
        "no-undefined": 0,
        "no-use-before-define": 2,

        "array-bracket-spacing": 0,
        "indent": [2, "tab", {
            "SwitchCase": 1
        }],
        "brace-style": 0,
        "comma-spacing": 1,
        "comma-style": 0,
        "consistent-this": 0,
        "eol-last": 1,
        "func-names": 0,
        "func-style": 0,
        "key-spacing": [0, {
            "beforeColon": true,
            "afterColon": true
        }],
        "lines-around-comment": 0,
        "max-nested-callbacks": [2, 3],
        "new-cap": 0,
        "new-parens": 2,
        "newline-after-var": 0,
        "no-array-constructor": 2,
        "no-continue": 0,
        "no-inline-comments": 0,
        "no-lonely-if": 1,
        "no-mixed-spaces-and-tabs": 2,
        "no-multiple-empty-lines": [2, {
            "max" : 2
        }],
        "no-nested-ternary": 0,
        "no-new-object": 1,
        "semi-spacing": [1, {
            "before": false,
            "after": true
        }],
        "no-spaced-func": 2,
        "no-ternary": 0,
        "no-trailing-spaces": 1,
        "no-unneeded-ternary": 2,
        "object-curly-spacing": [1, "always"],
        "one-var": [0, {
            "var"   : "always",
            "let"   : "always",
            "const" : "always"
        }],
        "operator-assignment": [0, "always"],
        "padded-blocks": 0,
        "quotes": [1, "single", "avoid-escape"],
        "quote-props": [1, "as-needed"],
        "sort-vars": 0,
        "keyword-spacing": 2,
        "space-before-blocks": [2, "always"],
        "space-before-function-paren": [1, {
            "anonymous": "always",
            "named": "never"
        }],
        "space-in-brackets": 0,
        "space-in-parens": [2, "never"],
        "space-infix-ops": 1,
        "space-unary-ops": [2, {
            "words" : true,
            "nonwords" : false
        }],
        "spaced-comment": 0,
        "wrap-regex": 0,

        "constructor-super": 2,
        "no-this-before-super": 2,
        "no-var": 0,
        "object-shorthand": 0,
        "prefer-const": 1,

        "max-depth": [2, 3],
        "max-len": [1, 80, 2],
        "max-params": [1, 4]
    },
    "globals": {
        "__DEV__": true,
        "__PROD__": true,
        "__DEBUG__": true,
        "__SERVER__": true,
        "__CLIENT__": true,
        "__ROOT_PATH__": true
    }
}
